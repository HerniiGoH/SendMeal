<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:clickable="true"
    android:fadingEdge="horizontal|vertical"
    android:focusable="true"
    app:cardCornerRadius="20dp"
    android:foreground="@drawable/ripple_bg"
    android:id="@+id/cardViewPlato">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imagenPlato"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/plato_01" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imagenOferta"
            android:layout_width="88dp"
            android:layout_height="87dp"
            android:layout_alignTop="@+id/imagenPlato"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:scaleType="centerInside"
            android:visibility="invisible"
            app:srcCompat="@drawable/oferta" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:orientation="vertical"
            android:layout_alignBottom="@+id/imagenPlato"
            android:id="@+id/layoutFila">

            <TextView
                android:id="@+id/ListaPlatoNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="25dp"/>

            <TextView
                android:id="@+id/ListaPlatoPrecio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="25dp" />
        </LinearLayout>

        <Button
            android:id="@+id/agregar_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imagenPlato"
            android:layout_alignEnd="@id/imagenPlato"
            android:text="@string/agregar_plato_pedido" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>